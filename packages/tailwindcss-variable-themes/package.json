{
  "name": "tailwindcss-variable-themes",
  "version": "0.0.3",
  "description": "TailwindCSS plugin for setting up multiple themes based on css variables",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "plugin",
    "theme",
    "css",
    "variables"
  ],
  "author": "Evgenii Khramkov <hey@ewgenius.me> (https://ewgenius.me)",
  "license": "MIT",
  "repository": "https://github.com/ewgenius/tailwindcss-variable-themes",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "./dist/*",
    "./README.md",
    "./LICENSE.md"
  ],
  "scripts": {
    "swcify": "swc ./src --out-dir ./dist",
    "build": "pnpm swcify",
    "dev": "pnpm swcify -- --watch",
    "test": "jest",
    "postbuild": "tsc --emitDeclarationOnly",
    "readme": "cp ../../README.md ./",
    "license": "cp ../../LICENSE.md ./",
    "prepublishOnly": "pnpm build && pnpm readme"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    }
  },
  "peerDependencies": {
    "tailwindcss": ">3"
  },
  "devDependencies": {
    "@radix-ui/colors": "^0.1.8",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.28",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "jest": "^29.4.0",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  }
}
